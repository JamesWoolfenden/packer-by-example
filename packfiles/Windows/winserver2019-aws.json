    "build_number": "{{env `BUILD_NUMBER`}}",
    "winrm_password": "SuperS3cr3t!!!!",
    "region": "us-west-2",
    "instance_type": "t3.large",
    "subnet_id": "subnet-051878b5dd8458dcb",
    "vpc_id": "vpc-0b4b473e65c6cec8b"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "Windows_Server-2019-English-Full-Base*",
          "root-device-type": "ebs"
        },
        "owners": ["self", "amazon"],
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "user_data_file": "./bootstrap_win.txt",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_timeout": "10m",
      "winrm_password": "{{ user `winrm_password` }}",
      "ami_name": "Authentic Desktop v{{user `version`}} Windows2019",
      "ami_description": "Windows 2019 Authentic",
      "ami_virtualization_type": "hvm",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "iex ((new-object net.webclient).DownloadString('https://chocolatey.org/install.ps1'))|out-null"
      ]
    },
    {
      "type": "powershell",
      "inline": ["choco install javaruntime -y -force"]
    }
  ]
