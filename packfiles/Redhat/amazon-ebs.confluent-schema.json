{
  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY_ID` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "aws_session_token": "{{ env `AWS_SESSION_TOKEN` }}",
    "aws_region": "{{ env `AWS_REGION` }}",
    "build_number": "{{ env `BUILD_NUMBER` }}",
    "instance_type": "t2.micro"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "token": "{{user `aws_session_token`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL-BASE-*",
          "root-device-type": "ebs"
        },
        "owners": ["self"],
        "most_recent": true
      },
      "ami_description": "Confluent schema registry",
      "ami_name": "confluent-schema-v{{user `build_number`}}-{{timestamp}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": true,
      "instance_type": "{{ user `instance_type` }}",
      "spot_price": "auto",
      "ssh_username": "ec2-user",
      "subnet_id": "{{user `subnet_id`}}",
      "temporary_key_pair_name": "confluent-schema-packer-{{timestamp}}",
      "vpc_id": "{{user `vpc_id`}}",
      "run_tags": {
        "Name": "confluent-schema-registry",
        "Application": "Schema",
        "OS_Version": "RedHat7.6"
      },
      "tags": {
        "OS_Version": "RedHat7",
        "Version": "{{user `build_number`}}",
        "Application": "Confluent Schema",
        "Runner": "EC2"
      }
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "{{template_dir}}/../../provisioners/ansible/playbooks/confluent.yml",
      "role_paths": [
        "{{template_dir}}/../../provisioners/ansible/roles/openjdk",
        "{{template_dir}}/../../provisioners/ansible/roles/confluent.common"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "{{template_dir}}/../../provisioners/ansible/playbooks/confluent-schema.yml",
      "role_paths": [
        "{{template_dir}}/../../provisioners/ansible/roles/confluent.schema-registry"
      ]
    },
    {
      "type": "shell",
      "script": "{{template_dir}}/../../provisioners/scripts/linux/redhat/open_confluent_firewall.sh"
    },
    {
      "type": "shell",
      "script": "{{template_dir}}/../../provisioners/scripts/linux/redhat/install_awscli.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "{{template_dir}}/../../provisioners/ansible/playbooks/cloudwatch-confluent.yml",
      "role_paths": [
        "{{template_dir}}/../../provisioners/ansible/roles/cloudwatch-logs"
      ]
    }
  ]
}
