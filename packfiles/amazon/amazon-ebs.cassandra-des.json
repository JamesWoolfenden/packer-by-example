{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_region": "{{env `AWS_REGION`}}",
    "build_number": "{{env `BUILD_NUMBER`}}",
    "instance_type": "t3.micro"
  },
  "provisioners": [
    {
      "type": "shell",
      "script": "{{template_dir}}/../../provisioners/scripts/linux/install-cassandra-dse.sh"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "token": "{{user `aws_session_token`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-*-x86_64-ebs",
          "root-device-type": "ebs"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "ec2-user",
      "ami_name": "cassandra-DSE-BASE-v{{user `build_number`}}-{{timestamp}}-AMI",
      "ami_description": "amazon cassandra DSE AMI",
      "ami_virtualization_type": "hvm",
      "ami_users": "{{ user `ami_users` }}",
      "temporary_key_pair_name": "amazon-packer-{{timestamp}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "spot_price": "auto",
      "associate_public_ip_address": true,
      "run_tags": {
        "Name": "amazon-cassandra-dse-packer",
        "Application": "cassandra"
      },
      "tags": {
        "OS_Version": "Amazon 2 linux",
        "Version": "{{user `build_number`}}",
        "Application": "Cassandra Image",
        "Runner": "EC2"
      }
    }
  ]
}
